<div class="d-flex flex-row bd-highlight justify-content-center">
    <div class="jumbotron p-0 mt-5 bg-primary shadow">
        <div class="d-flex justify-content-between">
            <h3 class="pt-2 pl-3">Event Name</h3>
            <h5 class="mt-3">{Location}</h5>
            <h6 class="mt-3 mr-3 ">Admin Name</h6>
        </div>
        <hr class="mt-1 mb-3">

        @for (int i = 0; i < 6; i++)
        {
            <div class="row">
                {Player Position} ->
                <button type="button" class="btn btn-danger mx-3 mb-2" data-toggle="modal" data-target="#exampleModal">{Player Name}</button>
                @await Html.PartialAsync($"_StarRatingPartial")
                <button class="btn btn-info btn-sm mx-3 mb-2" role="button">Join Event</button>
            </div>
        }

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h7 class="modal-title" id="exampleModalLabel">{Player Name}</h7>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row d-flex" style="width:500px; height:500px">
                            <div class="col">Description</div>
                            <div class="col">Description</div>
                            <div class="col">Description</div>
                        </div>
                    </div>                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" asp-controller="AdminEvent" asp-action="AdminViewEvent">View Profile</button>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-2">
        <div class="d-flex justify-content-center">
            <a class="btn btn-info btn mb-2 ml-4" href="#" role="button">Info</a>
        </div>
    </div>
</div>

<style>
    hr {
        background-color: bisque
    }

    a {
        color: white
    }

        a:hover, a:focus {
            background-color: transparent
        }
</style>



<script>
    src = "~/lib/bootstrap/dist/js/bootstrap.js";
    src = "~/js/site.js";
    src = "~/lib/jquery/dist/jquery.js";
</script>